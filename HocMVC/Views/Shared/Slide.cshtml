
@model List<Model.EF.Slide>
@{
    var firstActive = Model.Select(x => x.ID).FirstOrDefault();
    var listNewsMain = Model.Where(x => x.ID == firstActive).ToList();
    var listNews = Model.Where(x => x.ID != firstActive).ToList();
    var active = "active";
    int displayOrder = 0;
}
<div class="section introPage">
    <section id="intro" class="intro">
        <div id="carouselExampleIndicators"
             class="carousel slide"
             data-ride="carousel"
             data-touch="true">
            <ol class="carousel-indicators">
                @foreach (var item in Model)
                {
                    if (item.ID == firstActive)
                    {
                        <li data-target="#carouselExampleIndicators"
                            data-slide-to="@displayOrder"
                            class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators"
                            data-slide-to="@displayOrder"
                            ></li>
                    }
                    displayOrder++;
                }

            </ol>
            @foreach (var item in Model)
            {
                if (item.ID == firstActive)
                {
                    <div class="carousel-item active">
                        <div class="">
                            <img src="@item.Image" class="w-100" alt="..." />
                        </div>
                        <div class="carousel-item-desc">
                            <p>
                                @item.NoiDung
                            </p>
                            <a href="@item.Link" class="carousel-item-desc-more">
                                Xem Thêm <i class="bx bx-right-arrow-circle"></i>
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <div class="">
                            <img src="@item.Image" class="w-100" alt="..." />
                        </div>
                        <div class="carousel-item-desc">
                            <p>
                                @Html.Raw(item.NoiDung)
                            </p>
                            <a href="@item.Link" class="carousel-item-desc-more">
                                Xem Thêm <i class="bx bx-right-arrow-circle"></i>
                            </a>
                        </div>
                    </div>
                }


            }

            <button class="carousel-control-prev"
                    type="button"
                    data-target="#carouselExampleIndicators"
                    data-slide="prev">
                <span class="carousel-control-prev-icon"
                      aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-target="#carouselExampleIndicators"
                    data-slide="next">
                <span class="carousel-control-next-icon"
                      aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>
    </section>
</div>
<div class="header-setTop"></div>
<!--modal -->
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="sreenClickOpenHistory">
            <div class="modal fade"
                 id="exampleModalCenter-@item.ID"
                 tabindex="-1"
                 role="dialog"
                 aria-labelledby="exampleModalCenterTitle"
                 aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">
                                Lời ngỏ
                            </h5>
                            <button type="button"
                                    class="close"
                                    data-dismiss="modal"
                                    aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="modal-boxContent">
                                <div class="row mx-0">
                                    <div class="col-md-7 col-sm-12 pr-3">
                                        <h2 class="modal-boxContent_title">
                                            @if (item.GioiTinh == true)
                                            {
                                                <label>Ông</label> @item.Name}
                                            else
                                            {
                                                <label>Bà</label> @item.Name
                                            }
                                        </h2>
                                        <div class="modal-box d-flex align-items-center justify-content-end flex-row-reverse">
                                            <h4 class="modal-badges ml-2">
                                                <span class="badge badge-warning">
                                                    @item.TenChucVu
                                                </span>
                                            </h4>
                                            <p>Chức vụ</p>
                                        </div>
                                        <div class="modal-boxContent_desc">
                                            @Html.Raw(item.ChiTiet)
                                        </div>
                                    </div>
                                    <div class="col-md-5 col-sm-12 p-0">
                                        <div class="modal-boxContent_image">
                                            <img src="@item.Avata"
                                                 alt=""
                                                 class="img-fluid" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
}


<div id="my-scrollbar" class="my-container" data-scrollbar>
    <!--start-->
    @if (ViewBag.Slide != null && ViewBag.Slide.Count > 0)
    {
        <!--Background-->
        <div id="carouselExampleCaptions"
             class="carousel slide manager-background"
             data-ride="carousel">

            <ol class="carousel-indicators">

                @foreach (var item in ViewBag.Slide)
                {
                    int i = 0;
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleCaptions"
                            data-slide-to="@i"
                            class="active"></li>
                        i++;
                    }
                    else
                    {
                        <li data-target="#carouselExampleCaptions" data-slide-to="@i"></li>
                        i++;
                    }

                }



            </ol>
            <div class="carousel-inner">

                @foreach (var item in ViewBag.Slide)
                {
                    int i = 0;
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@item.Image"
                                 class="d-block"
                                 alt="..." />
                            <div class="carousel-caption">
                                <h1 class="text-white">Hội đồng quản trị & ban điều hành</h1>
                            </div>
                        </div>
                        i++;
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@item.Image"
                                 class="d-block"
                                 alt="..." />
                            <div class="carousel-caption">
                                <h1 class="text-white">Hội đồng quản trị & ban điều hành</h1>
                            </div>
                        </div>
                        i++;
                    }

                }



            </div>
            <button class="carousel-control-prev"
                    type="button"
                    data-target="#carouselExampleCaptions"
                    data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-target="#carouselExampleCaptions"
                    data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
        </div>

    }


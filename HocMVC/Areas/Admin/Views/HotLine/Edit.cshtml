
@model Model.EF.HotLine

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script>
        $('#btnSelectImageTongQuan').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImageTongQuan').val(url);
            };
            finder.popup();
        })
    </script>
}

@using (Html.BeginForm("Edit", "HotLine", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class=" register-form">
        <div class="form">
            <div class="note">
                <p>Cập nhât kênh hỗ trợ</p>
            </div>
            <section>
                <div class="row" style="border-bottom:solid 3px #dadada">
                    <div class="col-8">

                    </div>
                    <div class="col-sm-4" style="margin-top:10px">
                        <button type="submit" class="btn btn-default" style="margin-bottom:10px;color:white; float:right;margin-right:10px">@Html.ActionLink("Trở lại", "Index")</button>
                        <input type="submit" value="Lưu" class="btn btn-success" style="margin-bottom:10px;margin-right:10px; float:right" />
                    </div>
                </div>
            </section>
            <section class="content">
                <div class="row">

                    <div class="col-7" style="margin-left:10px">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>Tên</label>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Đường dẫn</label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.Link, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
                                @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
                            </div>
                        </div> <div class="form-group">
                            <label>Ghi chú</label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.GhiChu, htmlAttributes: new { @class = "form-control", @rows = 5, @cols = 30 })
                                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Hình ảnh </label>
                            <div class="col-md-12">
                                <div class="col-md-12">
                                    @Html.TextBoxFor(model => model.Image, new { @class = "form-control", htmlAttributes = new { @id = "txtImage" }, id = "txtImageTongQuan" })
                                    <a id="btnSelectImageTongQuan" href="#">Chọn ảnh</a>
                                    @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                    @*<img src="cinqueterre.jpg" id = "txtImage" class="rounded" alt="Cinque Terre" width="100" height="100">*@
                                </div>
                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>hiển thị</label>
                            <div class="col-md-12">
                                @Html.CheckBoxFor(model => model.Status)
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Là hotline hỗ trợ</label>
                            <div class="col-md-12">
                                @Html.CheckBoxFor(model => model.IsChat)
                                @Html.ValidationMessageFor(model => model.IsChat, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
            </section>
            <div class="form-horizontal">

            </div>
        </div>
    </div>

}

<div>

</div>
<style>
    .note {
        text-align: center;
        height: 80px;
        background: -webkit-linear-gradient(left, #0072ff, #8811c5);
        color: #fff;
        font-weight: bold;
        line-height: 80px;
    }

    .form-content {
        padding: 5%;
        border: 1px solid #ced4da;
        margin-bottom: 2%;
    }

    #HanNop {
        border-radius: 1.5rem;
        border: 1px solid #d2d0d0;
    }

    .form-control {
        border-radius: 1.5rem;
    }

    .btnSubmit {
        border: none;
        border-radius: 1.5rem;
        padding: 1%;
        width: 20%;
        cursor: pointer;
        background: #0062cc;
        color: #fff;
    }
</style>